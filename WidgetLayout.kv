<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "silly button"
        background_color: 1,1,255,1
        size_hint: 2,1
    Label:
        text: "that button is silly"
    Button:
        text: "not silly button"
        background_color: 255,1,1,1
        size_hint:0.5,1
        # horizontal positions: "x"(left), "center_x", "right"
        # vertical positions: "y"(top), "center_y", "bottom"
        pos_hint: {"y":.5}
        pos_hint: {"x":.5}

    BoxLayout:
        spacing: '20dp'
        Button:
            text: "Second not silly button"
            # horizontal positions: "x"(left), "center_x", "right"
            # vertical positions: "y"(top), "center_y", "bottom"
            pos_hint: {"y":.5}
            pos_hint: {"x":1}
        Button:
            text: "Second silly button"
            # horizontal positions: "x"(left), "center_x", "right"
            # vertical positions: "y"(top), "center_y", "bottom"
            pos_hint: {"y":2}
            pos_hint: {"x":2}


